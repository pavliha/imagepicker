.Thumbnail {
  //cursor: pointer;
  margin 5px;
  overflow hidden;
  //background-color #77908f;
  border-radius: 2px;
  box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25), 0 10px 10px rgba(0, 0, 0, 0.22);
  //background-color #fafafa
  border 3px;
  width 300px;

  .Thumbnail_img {
    cursor: pointer;
    max-width 300px;
  }
}

@media (max-width: 600px) {
  .Thumbnail {
    width 450px;

    .Thumbnail_img {
      cursor: pointer;
      max-width 450px;
    }
  }
}