@import "base.styl"
@import "normalize.styl"
@lost flexbox flex;

body {
  padding 0;
  margin 0;
  background-color #fafafa
}

.header {
  background: #00c6ff; /* fallback for old browsers */
  background: linear-gradient(50deg, #616161, #62534c); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  width: 100%;
  height 60px;
  box-shadow: 0 7px 14px rgba(0, 0, 0, 0.25), 0 2px 5px rgba(0, 0, 0, 0.11);
}


.ImageUploader{
  display flex;
  flex-direction: column;
  justify-content center;
  align-items center;
  align-content center;
  margin 0 20px;
  margin-top 40px;
  width:37%;
  z-index 3;
  min-width 60px;
  min-height 200px;
  box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25), 0 10px 10px rgba(0, 0, 0, 0.22);
  //background-color #fafafa;
  border-radius: 2px;
  background-color: #363433;
  form {
    width 100%;
    //background-color #0b97c4
    display flex;
    flex-direction: column;
    justify-content center;
    align-items center;
    align-content center;
  }
}

.ImageUploader_previewImage {
  opacity:0.4;
  text-align center
  width 100%;
}
.ImageUploader_StatusBar{
  margin-top: auto;
  width 100%;
  color #fafafa;
  padding 5px;
  text-align center;
  background: linear-gradient(50deg, #393939, #2e2321);
}

.Thumbnails {
  background #f3f2f4;
  margin 10px;
  margin-top 40px;
  justify-content center;
  display flex;
  flex-wrap wrap;
}

.Thumbnail {
  margin 5px;
  overflow hidden;
  //background-color #77908f;
  border-radius: 2px;
  box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25), 0 10px 10px rgba(0, 0, 0, 0.22);
  //background-color #fafafa
  border 3px;
  width 300px;
}
.Thumbnail_img {
  max-width 100%;
}


/**************Helpers*******************/

.flexbox-container {
  flex-wrap wrap;
  display: flex;
  align-items: center;
  justify-content center;
}

