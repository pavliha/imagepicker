@import "base.styl"
@import "normalize.styl"
@import "buttons.styl"
@import "vicons-font.styl"
@lost flexbox flex;

body {
  padding 0;
  margin 0;
  background-color #fafafa
}

.header {
  background: #00c6ff; /* fallback for old browsers */
  background: -webkit-linear-gradient(to left, #00c6ff , #0072ff); /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to left, #00c6ff , #0072ff); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  width: 100%;
  height 500px;
  box-shadow: 0 7px 14px rgba(0, 0, 0, 0.25), 0 2px 5px rgba(0, 0, 0, 0.11);
}

.section_source-image {
  position: relative;
  margin-top -20%;
  text-align center
  width 100%;
}

.block_source-image {
  z-index 3;
  margin 0 auto;
  width 70%;
  height 500px;
  padding 5px;
  box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25), 0 10px 10px rgba(0, 0, 0, 0.22);
  background-color #fafafa;
  border-radius: 2px;
}

.source-image {
  border-radius: 2px;

  background-color #77908f;
  width 900px;
}

.section_handled-image {
  margin-top 10%;
  justify-content center;
  display flex;
  flex-wrap wrap;
}

.block_handled-image {
  overflow hidden;
  //background-color #77908f;
  margin 5px;
  border-radius: 2px;
  box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25), 0 10px 10px rgba(0, 0, 0, 0.22);
  //background-color #fafafa
  border 3px;
  width 350px;
  height 300px;
}
.block_handled-image_img {
  max-width 100%;
}

.flexbox-container {
  display: flex;
  align-items: center;
  justify-content center;
}
